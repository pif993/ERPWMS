## Runtime
ENV=dev
HTTP_ADDR=:8080
COOKIE_SECURE=false
CORS_ALLOWED_ORIGINS=http://localhost:8080
RATE_LIMIT_LOGIN_PER_MIN=10
RATE_LIMIT_API_PER_MIN=120

## Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=erpwms
POSTGRES_SUPER_USER=postgres
POSTGRES_SUPER_PASSWORD=change-me-super

APP_DB_USER=erp_app
APP_DB_PASSWORD=change-me-app

# Used by backend-go (pgx)
DB_URL=postgres://erp_app:change-me-app@postgres:5432/erpwms?sslmode=disable

## Redis / NATS
# backend-go expects REDIS_ADDR (host:port)
REDIS_ADDR=redis:6379
NATS_URL=nats://nats:4222

## Security keys (REQUIRED in prod)
JWT_ISSUER=erpwms
JWT_AUDIENCE=erpwms-users
JWT_SIGNING_KEY_CURRENT=replace-with-strong-base64
JWT_SIGNING_KEY_PREVIOUS=

# peppers (HMAC lookups & audit hashing)
SEARCH_PEPPER=replace-with-strong-base64
AUDIT_PEPPER=replace-with-strong-base64

# AES-256-GCM field encryption master key (base64, must decode to 32 bytes)
FIELD_ENC_MASTER_KEY_CURRENT=replace-with-32-byte-base64
FIELD_ENC_MASTER_KEY_PREVIOUS=
FIELD_ENC_KEY_ID_CURRENT=v1
FIELD_ENC_KEY_ID_PREVIOUS=v0

## Seed admin (used by seeder/tools)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=StrongPassw0rd!

## Autotest (web GUI + endpoint)
AUTOTEST_ENABLED=true
AUTOTEST_TOKEN=replace-with-strong-base64

## Python analytics
ANALYTICS_SERVICE_TOKEN=replace-token
